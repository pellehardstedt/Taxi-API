{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "dist",
      "baseUrl": ".",
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "declaration": false,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "./server.ts",
      "./app.ts",
      "./db.ts",
      "./data.ts",
      "./dataloader.ts",
      "./router.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
  